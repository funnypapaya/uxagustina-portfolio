<div id="projects" class="projects-component">
  <h2 class="projects-component_title ">Projects</h2>

  <div>
    {{#each siteData.works}}
    <div class="projects-component_wrapper projects-component--flex">
      <div>
        <div class="projects-component_intro">
          <h4>{{this.category}}</h4>
          <p>{{this.description}}</p>
        </div>
        <div class="projects-component_item_img projects-component_item_img--square">
          {{>single-project cta=this.cta project=this.projects.[0]}}
        </div>
      </div>
      <div class="projects-component--flex-column">
        <div class="projects-component_item_img projects-component_item_img--rect">
          {{>single-project cta=this.cta project=this.projects.[1]}}
        </div>
        <div class="projects-component--flex">
          <div class="projects-component_item_img projects-component_item_img--square-sm">
            {{>single-project cta=this.cta project=this.projects.[2]}}
          </div>
          <div class="projects-component_item_img projects-component_item_img--square-sm">
            {{>single-project cta=this.cta project=this.projects.[3]}}
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

{{> divider}}

<style>
  .projects-component {
    padding-top: 10rem;
  }

  .projects-component_wrapper {
    margin: 5rem 0 10rem 0;
  }

  .projects-component_title {
    text-align: center;
    margin-bottom: 8rem;
  }

  .projects-component_intro {
    text-align: center;
    max-width: 23.12rem;
    margin: 0 auto 2rem auto;
  }

  .projects-component_intro h4 {
    margin-top: 0;
    position: relative;
    padding-bottom: 1rem;
  }

  .projects-component_intro p {
    margin-bottom: 0;
  }

  .projects-component_intro h4::before {
    content: "";
    width: 2rem;
    height: 2px;
    background-color: var(--color-accent);
    display: inline-block;
    position: absolute;
    bottom: 0;
    left: 50%;
