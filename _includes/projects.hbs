  }

  .projects-component_item_img img, .projects-component_item_img video {
    border-radius: 0.5rem;
  }

  .projects-component_item_img--square img, .projects-component_item_img--square video {
    max-width: 32.6rem;
  }

  .projects-component_item_img--rect img, .projects-component_item_img--rect video {
    max-width: 46.3rem;
  }

  .projects-component_item_img--square-sm img, .projects-component_item_img--square-sm video {
