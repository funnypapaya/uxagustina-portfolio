<div id="recommendations" class="recommendations-component">
  <h2 class="recommendations-component_title">Recommendations</h2>
  <div class="recommendations-component_more-link">
    <a href="https://www.linkedin.com/in/uxagustina/" class="link--highlighted">See more on my LinkedIn Profile</a><img src="./images/chevron.svg" class="link-chevron">
  </div>
  <div class="swiper-container">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      {{#each siteData.recommendations}}
        <!-- Slides -->
        <div class="swiper-slide">
          <p>{{this.content}}</p>
          <div class="swiper-slide_credentials">
            <img src="{{this.photo}}" alt="{{this.name}}" class="swiper-slide_credentials_photo">
            <div class="swiper-slide_credentials_divider">
              <h5>{{this.name}}</h5>
              <p>{{this.jobTitle}}</p>
            </div>
            <img src="{{this.logo}}" alt="{{this.company}}">
          </div>
        </div>
        {{/each}}
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>

    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</div>

<style>
  .recommendations-component {
    margin-bottom: 8rem;
    padding-top: 8rem;
  }
  
  .recommendations-component_title {
    text-align: center;
  }
  .swiper-container {
    width: 1300px;
    height: 500px;
  }

  .swiper-slide {
    padding: 5rem 14rem 0 14rem;
    line-height: 2.1rem;
  }

  .swiper-slide p {
    margin-bottom: 5rem;
    text-align: center;
  }

  .swiper-button-prev,.swiper-button-next {
    transform:scale(0.5);
    color: var(--color-black);
  }

  .swiper-button-prev:hover ,.swiper-button-next:hover {
    color: var(--color-accent);
  }

  .swiper-slide_credentials {
    display: flex;
    justify-content: center;
  }

  .swiper-slide_credentials img {
    align-self: center;
    margin: 0 2rem;
  }

  .swiper-slide_credentials_photo {
    border-radius: 50%;
    max-width: 3.75rem;
  }

  .swiper-slide_credentials h5,  .swiper-slide_credentials p {
    margin: 0;
    text-align: left;
  }

  .swiper-slide_credentials_divider {
    border-right: 0.125rem solid var(--color-dark-grey);
    padding-right: 2rem;
  }

  .swiper-pagination-bullet-active {
    background: var(--color-accent);
  }

  .recommendations-component_more-link {
    text-align: center;
    margin: 0;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var mySwiper = new Swiper ('.swiper-container', {
      // Optional parameters
      loop: true,

      // If we need pagination
      pagination: {
        el: '.swiper-pagination',
      },

      // Navigation arrows
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },

      //Scroll bar
      scrollbar: {
        hide: true,
      }
    })
  }); 
  </script>
